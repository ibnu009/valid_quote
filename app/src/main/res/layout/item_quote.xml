<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/grey_800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgQuote"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="@dimen/space"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_quote"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txvQuote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingEnd="@dimen/space_half"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/space"
            android:layout_marginEnd="@dimen/space_triple"
            android:layout_marginTop="@dimen/space_double"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgQuote"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="@dimen/space_double"
            tools:text="Text yang panjangggggg" />

        <TextView
            android:id="@+id/txvAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="@dimen/space"
            android:layout_marginBottom="@dimen/space"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingEnd="@dimen/space_half"
            android:textAlignment="textEnd"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txvQuote"
            tools:text="- Ibnu" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>